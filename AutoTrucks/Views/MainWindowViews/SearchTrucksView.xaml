<UserControl x:Class="Views.MainWindowViews.SearchTrucksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views.MainWindowViews"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Style="{StaticResource TitleText}">Search Trucks</TextBlock>
        <StackPanel Grid.Row="1" Style="{StaticResource CRUDStackPanel}">
            <Button Command="{Binding SearchForSelectedTruckCommand, Mode=OneWay}" Style="{StaticResource CRUDButtons}" Background="Green">Play</Button>
            <Button Style="{StaticResource CRUDButtons}">Stop</Button>
            <Button Command="{Binding OpenSearchWindowCommand, Mode=OneWay}" Style="{StaticResource CRUDButtons}" Background="Green">New</Button>
            <Button Style="{StaticResource CRUDButtons}">Edit</Button>
            <Button Style="{StaticResource CRUDButtons}">Del</Button>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="dataGridPostLoadsResults"  Style="{StaticResource ListResultsDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Number" Binding="{Binding Number}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Style="{StaticResource CRUDStackPanel}">
            <TextBlock>Search results Total:0 New:0</TextBlock>
            <Button Style="{StaticResource CRUDButtons}" >Undo</Button>
            <Button Style="{StaticResource CRUDButtons}" >Clear</Button>
        </StackPanel>

        <DataGrid Grid.Row="4" x:Name="dataGridCallResults" ItemsSource="{Binding Trucks}" Style="{StaticResource ListResultsDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Avail" Binding="{Binding Avail}"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}"/>
                <DataGridTextColumn Header="Truck" Binding="{Binding Truck}"/>
                <DataGridTextColumn Header="F/P" Binding="{Binding FP}"/>
                <DataGridTextColumn Header="Origin" Binding="{Binding OriginToString}"/>
                <DataGridTextColumn Header="DH-O" Binding="{Binding DHO}"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding DestinationToString}"/>
                <DataGridTextColumn Header="DH-D" Binding="{Binding DHD}"/>
                <DataGridTextColumn Header="InitialO" Binding="{Binding InitialO}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</UserControl>


